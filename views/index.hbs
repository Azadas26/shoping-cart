
<section>
  <div class="container-fluid">
    <div class="row">

      {{#each products}}
      <div class="col-md-3" style="margin-top: 4em;">

        <div class="card "
          style="width: 18rem; align-items: center; border-radius: 14px; box-shadow: 0px 1px 12px 5px #3b3b3b; margin: auto;">
          <img class="card-img-top img-fluid pt-2" style="border-radius: 14px;  width: 266px; height: 247px;"
            src="{{this.image}}" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.discription}}</p>
            <a href="#" class="btn btn-primary" style="border-radius: 14px;">Add To Cart</a>
          </div>
        </div>
      </div>

      {{/each}}

    </div>
  </div>

</section>